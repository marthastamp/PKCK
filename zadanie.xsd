<xs:schema  elementFormDefault="qualified" 
  targetNamespace="https://www.w3schools.com"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:własny="http://www.example.com/typy">

<!-- JAK COS TO PISZE OD ZERA BO POLAPANIE SIE W TYM GOTOWCU JEST TRAGICZNE PO PROSTU -->

<!-- ZEBY COS NIE WYBUCHLO TO NA RAZIE GO NIE KOMENTUJE -->

<!-- autorzy -->


<xs:simpleType name="DaneTyp">
  <xs:restriction base="string">
    <xs:maxLength value = "30"/>
  </xs:restriction>
</xs:simpleType>


<xs:simpleType name="EmailTyp">
  <xs:restriction base="string">
    <xs:maxLength value= "20"/>
   </xs:restriction> 
 </xs:simpleType> 



<xs:complexType name="autorTyp">
  <xs:sequence>
    <xs:element name="dane" type="własny:DaneTyp"/>
    <xs:element name="email" type="własny:EmailTyp"/>
  </xs:sequence>
</xs:complexType>

<!-- koniec autorow -->


<!-- LIGA -->


<xs:simpleType name="KrajTyp">
  <xs:restriction base="string">
    <xs:maxLength value= "6"/>
   </xs:restriction> 
 </xs:simpleType> 

<xs:simpleType name="NazwaTyp">
  <xs:restriction base="string">
    <xs:maxLength value ="60"/>
  </xs:restriction>
</xs:simpleType>


<xs:simpleType name="MiastoTyp">
  <xs:restriction base="string">
    <xs:pattern value="\p{Lu}\p{Ll}{1,}"/>
    <xs:maxLength value ="60"/>
  </xs:restriction>
</xs:simpleType>

<xs:simpleType name="StadionTyp">
  <xs:attribute name="stadionId" type="xs:string" use="required"/>
</xs:simpleType>

<!-- WSZYSTKIE TYPY STAD DO ZDEFINIOWANIA -->

<xs:complexType name="TrenerTyp">
  <xs:sequence>
    <xs:element name="imię" type="własny:imięTyp" use="required" maxOccurs="1"/>
    <xs:element name="nazwisko" type="własny:nazwiskoTyp" use="required" maxOccurs="1"/>
    <xs:element name="data_urodzenia" type="własny:data_urodzeniaTyp" use="optional"/>
    <xs:element name="narodowość" type="własny:narodowośćTyp" use="required"/>
  </xs:sequence>
</xs:complexType>  



<xs:complexType name="LigaPiłkarskaTyp">
  <xs:attribute name="rok" type="xs:string" use="required" default="2017/2018"/>
  <xs:attribute name="nazwa" type="własny:NazwaTyp" use="required"/>
  <xs:attribute name="kraj" type="własny:KrajTyp" use="required"/>
</xs:complexType>


  <xs:complexType name="KlubTyp">
    <xs:sequence>
      <xs:element name="nazwa" type="własny:NazwaTyp" />
      <xs:element name="miasto" type="własny:MiastoTyp" />
      <xs:element name="stadion" type="własny:StadionTyp" />
      <xs:element name="trener" type="własny:TrenerTyp" />
    </xs:sequence>
  </xs:complexType>

<!--   <xs:complexType name="TrenerTyp">
    <xs:sequence>
      <xs:element name="imię" type="xs:string" />
      <xs:element name="nazwisko" type="xs:string" />
      <xs:element name="data_urodzenia" type="xs:date" />
      <xs:element name="narodowość" type="xs:string" />
    </xs:sequence>
  </xs:complexType>
 -->
  <xs:simpleType name="TytułyTyp">
    <xs:restriction base="xs:string">
        <xs:enumeration value="mistrzostwo" />
        <xs:enumeration value="puchar" />
    </xs:restriction>
  </xs:simpleType>


  <xs:simpleType name="klubIdTyp">
    <xs:restriction base="xs:string">
      <xs:pattern value="[k][0-20]"/>
    </xs:restriction> 
  </xs:simpleType>

  <xs:complexType name="meczTyp">
    <xs:choice>
      <xs:element name="klubId" minOccurs="2" maxOccurs="2"/>
      <xs:element name="stadionId"/>
    </xs:choice>
  </xs:complexType> 








  <xs:element name="zadanie">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="informacje">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="tytuł" />
              <xs:element type="xs:string" name="dataDokumentu" />
              <xs:element name="autorzy">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="autor" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:string" name="dane" />
                          <xs:element type="xs:string" name="email" />
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>


        <xs:element name="liga_piłkarska">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="kluby">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="klub" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:string" name="nazwa" />
                          <xs:element type="xs:string" name="miasto" />
                          <xs:element name="stadion">
                            <xs:complexType>
                              <xs:simpleContent>
                                <xs:extension base="xs:string">
                                  <xs:attribute type="xs:string" name="stadionId" use="optional" />
                                </xs:extension>
                              </xs:simpleContent>
                            </xs:complexType>
                          </xs:element>
                          <xs:element name="trener">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element type="xs:string" name="imię" />
                                <xs:element type="xs:string" name="nazwisko" />
                                <xs:element type="xs:string" name="data_urodzenia" />
                                <xs:element type="xs:string" name="narodowość" />
                              </xs:sequence>
                            </xs:complexType>
                          </xs:element>
                          <xs:element name="tytuły" maxOccurs="unbounded" minOccurs="0">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element type="xs:byte" name="liczba" />
                              </xs:sequence>
                              <xs:attribute type="xs:string" name="typ" use="required" />
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                        <xs:attribute type="xs:string" name="klubId" use="optional" />
                        <xs:simpleType>
                          <xs:restriction base="xs:string">
                            <xs:enumeration value="mistrzostwo" />
                            <xs:enumeration value="puchar" />
                          </xs:restriction>
                        </xs:simpleType>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="stadiony">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="stadion" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:string" name="nazwa" />
                          <xs:element type="xs:int" name="pojemność" />
                          <xs:element name="bilet" maxOccurs="unbounded" minOccurs="0">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element name="cena">
                                  <xs:complexType>
                                    <xs:simpleContent>
                                      <xs:extension base="xs:float">
                                        <xs:attribute type="xs:string" name="waluta" use="optional" />
                                      </xs:extension>
                                    </xs:simpleContent>
                                  </xs:complexType>
                                </xs:element>
                              </xs:sequence>
                              <xs:attribute type="xs:string" name="typb" use="optional" />
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                        <xs:attribute type="xs:string" name="stadionId" use="optional" />
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="mecze">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="mecz" maxOccurs="unbounded" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element type="xs:string" name="data" />
                        </xs:sequence>
                        <xs:attribute type="xs:string" name="klubId" use="optional" />
                        <xs:attribute type="xs:string" name="stadionId" use="optional" />
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute type="xs:string" name="rok" />
            <xs:attribute type="xs:string" name="nazwa" />
            <xs:attribute type="xs:string" name="kraj" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>